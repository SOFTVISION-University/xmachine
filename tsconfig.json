{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "target": "es2015",
        "jsx": "react",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "outDir": "dist/",
        "declaration": true,
        "declarationDir": "./typings/"
    },
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ],
    "include": [
        "src/*"
    ],
    "files": ["src/index.ts"]
}
